{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "cssVariables.js",
    "tailwind.config.js",
    "vuestic.my.config.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/services/zitadelAuth.ts",
    "../../api/src/routes/appRouter.ts",
    "plugins"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
